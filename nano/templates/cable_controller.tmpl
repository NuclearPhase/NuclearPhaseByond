<h3>Cable controller status</h3>

<div class="item">
	<div class="itemLabel">
		Temperature
	</div>
	<div class="itemContent">
		{{:data.temperature}} Â°C
	</div>
</div>

<div class="item">
	<div class="itemLabel">
		Amperage:
	</div>
	<div class="itemContent">
		{{:data.amperage}} A
	</div>
</div>

<h3>Resistance status</h3>
<div class="item">
	<div class="itemLabel">
		Resistance per each cable:
	</div>
	<div class="itemContent">
		{{:helper.displayBar(data.resistance, data.minresistance, data.maxresistance)}}
		<div style="clear: both; padding-top: 4px;">
			{{:helper.link('-', null, {'adj' : -0.01}, (data.resistance > data.minresistance) ? null : 'disabled')}}
			{{:helper.link('-', null, {'adj' : -0.001}, (data.resistance > data.minresistance) ? null : 'disabled')}}
			{{:helper.link('-', null, {'adj' : -0.0001}, (data.resistance > data.minresistance) ? null : 'disabled')}}
			{{:helper.link('-', null, {'adj' : -0.00001}, (data.resistance > data.minresistance) ? null : 'disabled')}}
			<div style="float: left; width: 80px; text-align: center;">&nbsp;{{:data.resistance}} Ohm&nbsp;</div>
			{{:helper.link('+', null, {'adj' : 0.00001}, (data.resistance < data.maxresistance) ? null : 'disabled')}}
			{{:helper.link('+', null, {'adj' : 0.0001}, (data.resistance < data.maxresistance) ? null : 'disabled')}}
			{{:helper.link('+', null, {'adj' : 0.001}, (data.resistance < data.maxresistance) ? null : 'disabled')}}
			{{:helper.link('+', null, {'adj' : 0.01}, (data.resistance < data.maxresistance) ? null : 'disabled')}}
		</div>
	</div>
</div>